<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_focused="false">
        <shape>
            <solid android:color="@color/white"/>
            <stroke android:width="0.5dp" android:color="#c8c8c8"/>
            <corners android:topRightRadius="5dp" android:bottomLeftRadius="5dp"    
                     android:topLeftRadius="5dp"  android:bottomRightRadius="5dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/transparent"/>
            <stroke android:width="0.5dp" android:color="@color/blue"/>
            <corners android:topRightRadius="5dp" android:bottomLeftRadius="5dp"    
                     android:topLeftRadius="5dp"  android:bottomRightRadius="5dp"/>
        </shape>
    </item>

</selector>
